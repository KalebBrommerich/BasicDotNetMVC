@model BasicDotNetMVC.Models.HeadlineParagraphImageModel

<div class="relative w-full h-full rounded-xl  bg-cover bg-center"
     style="background-image: url('@Model.BackgroundImageUrl');">

    <div class="absolute top-0 left-0 w-full text-center p-4 z-10 text-shadow-lg/30">
        <h3 class="text-3xl font-bold text-yellow-300">@Model.Headline</h3>
    </div>

    <div class="absolute inset-0 flex items-center justify-center z-10 text-shadow-lg/30">
        <p class="text-yellow-300 text-xl px-6 text-center bg-gray-900/20">@Model.Description</p>
    </div>
</div>


