<script src="/js/site.js"></script>

<div class="flex flex-col relative w-full h-full rounded-lg shadow-lg bg-gray-900 text-yellow-300">
  <h3 class="text-6xl lg:text-3xl font-bold p-4 text-center">Enlist Today</h3>

  <form method="post" onsubmit="return ContactSubmit(this)"
        class="flex flex-col grow w-full bg-gray-800 overflow-hidden rounded-lg shadow-lg   ">
    <div class="flex-grow space-y-4 p-4">
      <div class="flex flex-row justify-center items-center">
        <label for="firstName" class="block text-2xl w-2/6 text-center">First name</label>
        <input type="text" id="firstName" name="firstName"
               class="w-4/6 p-2 m-2 bg-gray-400 text-black rounded-lg text-2xl lg:text-m" required />
      </div>

      <div class="flex flex-row justify-center items-center">
        <label for="lastName" class="block text-2xl w-2/6 text-center">Last name</label>
        <input type="text" id="lastName" name="lastName"
               class="w-4/6 p-2 m-2 bg-gray-400 text-black rounded-lg text-2xl lg:text-m" required />
      </div>

      <div class="flex flex-row justify-center items-center">
        <label for="email" class="block text-2xl w-2/6 text-center">Email</label>
        <input type="email" id="email" name="email"
               class="w-4/6 p-2 m-2 bg-gray-400 text-black rounded-lg text-2xl lg:text-m" required />
      </div>

      <div class="flex flex-row justify-center items-center">
        <label for="message" class="block text-2xl w-2/6 text-center">Comment</label>
        <textarea id="message" name="message" rows="4"
                  class="w-4/6 p-2 m-2 bg-gray-400 text-black rounded-lg resize-none text-2xl lg:text-m"></textarea>
      </div>
    </div>

    <div class="mt-auto p-4">
      <button type="submit"
              class="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-bold p-2 rounded-lg">
        Submit
      </button>
    </div>
  </form>
</div>
